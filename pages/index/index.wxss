.introduce{
    display:flex;
    flex-direction: row;
    padding: 20rpx;
    margin: 3rpx;
    align-items: center;
    width: auto;
    height: 300rpx;
    background-color: #1296db;
}
.btn_Group{
    display:flex;
    flex-direction:column;
    margin-top: 30rpx;
}
.btn_item{
    display:flex;
    flex-direction: row;
    padding-left: 40rpx;
    margin: 10rpx;
    align-items: center;
    width: auto;
    height: 150rpx;
    border-radius: 2%;
    box-shadow: 0 1px 1px rgba(0,0,0,.5);
    background-color: #dbe8f0;
}

.intro_pic image{
    width:300rpx;
    height:300rpx;
}
.intro-info{
    padding-left: 20rpx;
    font-size: 16px;
}
.svg_pic image{
    width:150rpx;
    height:150rpx;
}
.btn-text{
    margin-left: 20rpx;
}